{
  "globalTagDefaults" : {
    "doorDirection" : "Right"
  },

  "animatedParts" : {
    "stateTypes" : {
      "doorState" : {
        "default" : "closed",
        "states" : {
          "opening" : {
            "frames" : 3,
            "cycle" : 0.15,
            "mode" : "transition",
            "transition" : "open"
          },
          "open" : {
            //"frames" : 1,
            //"cycle" : 0.2,
            //"mode" : "loop"
          },
          "closing" : {
            "frames" : 2,
            "cycle" : 0.15,
            "mode" : "transition",
            "transition" : "closed"
          },
          "closed" : {
            "frames" : 6,
            "cycle" : 1.20,
            "mode" : "loop"
          },
          "locking" : {
            "frames" : 2,
            "cycle" : 0.15,
            "mode" : "transition",
            "transition" : "locked"
          },
          "locked" : { }
        }
      }
    },

    "parts" : {
      "door" : {
        "properties" : {
          "centered" : false
        },

        "partStates" : {
          "doorState" : {
            "opening" : {
              "properties" : {
                "image" : "<partImage>:opening.<frame>"
              }
            },
            "open" : {
              "properties" : {
                //"image" : "<partImage>:open<doorDirection>.<frame>"
                "image" : "<partImage>:open"
              }
            },

            "closing" : {
              "properties" : {
                "image" : "<partImage>:closing.<frame>"
              }
            },

            "closed" : {
              "properties" : {
                "image" : "<partImage>:closed.<frame>"
              }
            },

            "locking" : {
              "properties" : {
                "image" : "<partImage>:locking.<frame>"
              }
            },

            "locked" : {
              "properties" : {
                "image" : "<partImage>:locked"
              }
            }
          }
        }
      }
    }
  },

  "sounds" : {
    "open" : [],
    "close" : [],
    "locked" : [ "/sfx/interface/clickon_error.ogg" ]
  }
}
